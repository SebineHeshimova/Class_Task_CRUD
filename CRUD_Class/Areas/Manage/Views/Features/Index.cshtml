@model List<Features>
@{
    int counter = 0;
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Logo</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
       @foreach(var features in Model)
       {
            counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@features.Title</td>
                <td>@features.Description</td>
                <td>@features.Logo</td>
                <td>
                    <a asp-action="update" asp-controller="Features" asp-route-id="@features.Id">Update</a>
                    <a asp-action="delete" asp-controller="Features" asp-route-id="@features.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
